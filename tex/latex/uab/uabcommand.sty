% Renew commands from commath for good typography of 
% differentials i.e. dif Dif od pd
\renewcommand{\dif}{
  \text{d}
}
\renewcommand{\Dif}{
  \text{D}
}
\renewcommand{\od}[3][]{
  \frac{\dif^{#1}{#2}}{\dif{#3}^{#1}}
}
\renewcommand{\pd}[3][]{
  \frac{\partial^{#1}{#2}}{\partial{#3}^{#1}}
}
\newcommand{\Dd}[3][]{
  \frac{\Dif^{#1}{#2}}{\Dif{#3}^{#1}}
}

% Command for integrals in math enviornment.
\newcommand{\integral}[4]{
  \int_{#3}^{#4}\!#1\,\dif #2
}

\newcommand{\iintegral}[4]{
  \iint_{#3}^{#4}\!#1\,\dif #2
}

\newcommand{\iiintegral}[4]{
  \iiint_{#3}^{#4}\!#1\,\dif #2
}

\newcommand{\ointegral}[3]{
  \oint_{#3}\!#1\,\dif #2
}

\newcommand{\oiintegral}[3]{
  \oiint_{#3}\!#1\,\dif #2
}

\newcommand{\oiiintegral}[3]{
  \oiiint_{#3}\!#1\,\dif #2
}

% Command for bold roman font in math environment (i.e. tensors)
\newcommand{\bmrm}[1]{
  \bm{\mathrm{#1}}
}